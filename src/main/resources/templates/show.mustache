{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">글 번호</th>
        <th scope="col">제목</th>
        <th scope="col">내용</th>
        <th scope="col">닉네임</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    {{#article}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{content}}</td>
            <td>{{userName}}</td>
        </tr>
    {{/article}}
    </tbody>
    </table>
    <a href="/articles/new" class='btn btn-primary btn-sm mb-2'>새 글 작성</a>
    <a href="/articles" class='btn btn-primary btn-sm mb-2'>글 목록</a>
    <a href="/articles/{{id}}/edit" class='btn btn-success btn-sm mb-2'>수정</a>
    <a href="/articles/{{id}}/delete" class='btn btn-danger btn-sm mb-2'>삭제</a>
{{>layouts/footer}}